<!DOCTYPE html>
<html lang="pt-br">
  <!-- Cabeçalho do documento -->
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title><%= title %></title>

    <!-- CSS  Materialize -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
  </head>

  <body>
    <!-- Barra de navegação principal -->
    <nav class="white" role="navigation">
      <div class="nav-wrapper container">
        <!-- Logo -->
        <a href="/" class="logo-container">
          <img src="../components/images/logo_pizzashow.png" alt="Pizza Show" class="nav-logo" />
        </a>

        <!-- Menu de navegação desktop -->
        <ul class="right hide-on-med-and-down">
          <li>
            <a href="/" class="nav-item-off nav-item-bright" style="color: #900404">
              <i class="material-icons">home</i>
              <span>Home</span>
            </a>
          </li>
          <li>
            <a href="/produtos" class="black-text nav-item-off nav-item-bright">
              <i class="material-icons">restaurant</i>
              <span>Produtos</span>
            </a>
          </li>
          <li>
            <a href="/clientes" class="black-text nav-item-off nav-item-bright">
              <i class="material-icons">account_box</i>
              <span>Clientes</span>
            </a>
          </li>
          <li>
            <a href="/pedidos" class="black-text nav-item-off nav-item-bright">
              <i class="material-icons">add_shopping_cart</i>
              <span>Pedidos</span>
            </a>
          </li>
        </ul>

        <!-- Botão menu mobile -->
        <a href="#" data-target="nav-mobile" class="sidenav-trigger">
          <i class="material-icons black-text">menu</i>
        </a>
      </div>
    </nav>

    <!-- Menu lateral mobile -->
    <ul id="nav-mobile" class="sidenav">
      <li><a href="/produtos">Produtos</a></li>
      <li><a href="/clientes">Clientes</a></li>
      <li><a href="/pedidos">Pedidos</a></li>
    </ul>

    <!-- Conteúdo principal -->
    <section>
      <div class="container">
        <div class="section">
          <!-- Grid de cards -->
          <div class="row">
            <div class="col s12 m4">
              <div class="card">
                <div class="card-image">
                  <img src="../components/images/pizza_03.jpg" alt="Produtos">
                  <span class="card-title"><b>Produtos</b></span>
                </div>
                <div class="card-content">
                  <p>Gerencie o catálogo de produtos.</p>
                  <div class="collection" style="border: none; margin: 10px 0 0 0;">
                    <span class="collection-item" style="padding: 5px;">Cadastrados<span class="new badge green" id="produtosBadge" data-badge-caption=""><%= contagens.totalProdutos %></span></span>
                  </div>
                </div>
                <div class="card-action">
                  <a href="/produtos" class="red-text"><b>Acessar Produtos</b></a>
                </div>
              </div>
            </div>

            <div class="col s12 m4">
              <div class="card">
                <div class="card-image">
                  <img src="../components/images/clientes_01.jpg" alt="Clientes">
                  <span class="card-title"><b>Clientes</b></span>
                </div>
                <div class="card-content">
                  <p>Gerencie os dados dos clientes.</p>
                  <div class="collection" style="border: none; margin: 10px 0 0 0;">
                    <span class="collection-item" style="padding: 5px;">Cadastrados<span class="new badge green" id="clientesBadge" data-badge-caption=""><%= contagens.totalClientes %></span></span>
                  </div>
                </div>
                <div class="card-action">
                  <a href="/clientes" class="red-text"><b>Acessar Clientes</b></a>
                </div>
              </div>
            </div>

            <div class="col s12 m4">
              <div class="card">
                <div class="card-image">
                  <img src="../components/images/pedidos_01.jpg" alt="Pedidos">
                  <span class="card-title"><b>Pedidos</b></span>
                </div>
                <div class="card-content">
                  <p>Controle os pedidos realizados.</p>
                  <div class="collection" style="border: none; margin: 10px 0 0 0;">
                    <span class="collection-item" style="padding: 5px;">Realizados<span class="new badge green" id="pedidosBadge" data-badge-caption=""><%= contagens.totalPedidos %></span></span>
                  </div>
                </div>
                <div class="card-action">
                  <a href="/pedidos" class="red-text"><b>Acessar Pedidos</b></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Footer -->
    <footer class="page-footer grey lighten-4" style="margin-top: 20px;">
      <div class="container">
        <div class="row" style="margin-bottom: 0;">
          <div class="col s12" style="line-height: 0.8;">
            <p class="black-text" style="font-size: 0.75rem; margin: 3px 0;">
              <i class="tiny material-icons" style="vertical-align: middle; margin-right: 5px; font-size: 1rem;">info</i>
              Sistema para gerenciamento de produtos, clientes e pedidos de pizzaria.
            </p>
            <p class="black-text" style="font-size: 0.75rem; margin: 3px 0;">
              <i class="tiny material-icons" style="vertical-align: middle; margin-right: 5px; font-size: 1rem;">code</i>
              Faculdade Nova Roma - ADS - Projeto Integrador - Full Stack
            </p>
            <p class="black-text" style="font-size: 0.75rem; margin: 3px 0;">
              <i class="tiny material-icons" style="vertical-align: middle; margin-right: 5px; font-size: 1rem;">group</i>
              Eduardo Cadiz - [2025]
            </p>
          </div>
        </div>
      </div>
      <div class="footer-copyright" style="padding: 5px 0;">
        <div class="container black-text" style="font-size: 0.7rem;">
          © 2025 Pizza Show
        </div>
      </div>
    </footer>
    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="/js/materialize.js"></script>
    <script src="/js/init.js"></script>
    <script>
      // Remover código anterior de atualização
      function atualizarContadores() {
        fetch('/contadores')
            .then(response => response.json())
            .then(data => {
                document.getElementById('produtosBadge').textContent = data.totalProdutos;
                document.getElementById('clientesBadge').textContent = data.totalClientes;
                document.getElementById('pedidosBadge').textContent = data.totalPedidos;
            })
            .catch(error => console.error('Erro ao atualizar contadores:', error));
      }

      // Atualizar a cada 30 segundos
      setInterval(atualizarContadores, 30000);
    </script>
  </body>
</html>
